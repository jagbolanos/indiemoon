<% provide(:title, 'New Event') %>
<h1>New event</h1>
<div class='row'>
  <div class='span6 offset3'>
    <%= form_for(@event) do |f| %>
      <%= render 'shared/error_messages', object: f.object  %>
      <%= f.text_field :name, placeholder: "Event title" %>
      <div class="field">
        <%= f.text_area :description, placeholder: "Tell us about the event...", rows:5 %>
      </div>
      <div class="field">
        <%= f.text_area :address, placeholder: "Where is it?", rows:3 %>
      </div>
      <div class="field"><%= f.date_select :start_date %></div>
      <div class="field"><%= f.time_select :start_time %></div>
      <div class="field"><%= f.date_select :end_date %></div>
      <div class="field"><%= f.time_select :end_time %></div>
      <%= f.submit "Create", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
