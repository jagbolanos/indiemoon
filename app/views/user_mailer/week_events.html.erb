<!DOCTYPE html>
<html>
<body>
<h1>This week</h1>
<% @events[:this_week].each do |day| %>
  <% if day[:events].length > 0 %>
    <h2><%= day[:day].to_s(:short) %></h2>
    <ul>
    <% day[:events].each do |event| %>
      <li><%= event.name %></li>
    <% end %>
    </ul>
  <% end %>
<% end %>
</body>
</html>
